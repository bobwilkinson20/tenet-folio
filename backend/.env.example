# Database
DATABASE_URL=sqlite:///./portfolio.db
# SQLCipher encryption key (auto-generated and stored in macOS Keychain on first run)
# SQLCIPHER_KEY=

# SnapTrade credentials (optional - for SnapTrade integration)
# Get from https://snaptrade.com
SNAPTRADE_CLIENT_ID=
SNAPTRADE_CONSUMER_KEY=
SNAPTRADE_USER_ID=portfolio-user
SNAPTRADE_USER_SECRET=

# SimpleFIN credentials (optional - for SimpleFIN integration)
# Run: python scripts/setup_simplefin.py to exchange setup token for access URL
SIMPLEFIN_ACCESS_URL=

# Interactive Brokers Flex Web Service credentials (optional)
# Run: python scripts/setup_ibkr.py to validate and configure
IBKR_FLEX_TOKEN=
IBKR_FLEX_QUERY_ID=

# Coinbase Advanced Trade API credentials (optional)
# Run: python scripts/setup_coinbase.py to validate and configure
# IMPORTANT: When creating your CDP API key, select ECDSA (not Ed25519)
# Option 1: Path to CDP API key JSON file
COINBASE_KEY_FILE=
# Option 2: Inline API key and secret (secret must be double-quoted)
COINBASE_API_KEY=
COINBASE_API_SECRET=

# Charles Schwab API credentials (optional)
# Run: python scripts/setup_schwab.py to complete OAuth flow
SCHWAB_APP_KEY=
SCHWAB_APP_SECRET=
SCHWAB_CALLBACK_URL=https://127.0.0.1
SCHWAB_TOKEN_PATH=

# Plaid credentials (optional - for Plaid integration)
# Run: python scripts/setup_plaid.py to validate and configure
PLAID_CLIENT_ID=
PLAID_SECRET=
# Environment: sandbox, development, or production (must match your keys)
PLAID_ENVIRONMENT=sandbox

# At least one provider must be configured

# App settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
